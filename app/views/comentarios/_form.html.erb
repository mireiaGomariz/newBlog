<%= form_for([@articulo, @articulo.comentarios.build]) do |form| %>
  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>
<br>
  <div class="field">
    <%= form.label :texto %>
    <%= form.text_area :texto %>
  </div>
<br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
